!!!
%html
  %head
    %title= "Exvo Globalize translations"
    %meta{ :name => "robots", :content => "noindex, nofollow" }
    :css
      p.request_host {
        background: #f9fdf1;
        border: 1px solid #d2e1b8;
        font: 12px Verdana, Helvetica, Arial, sans-serif;
        margin: 0;
        padding: 0.6em 1em;
        position: absolute;
        right: 1em;
        text-align: center;
        top: 1em;
      }

      p.request_host span {
        display: block;
        font-weight: bold;
        margin: 0.2em auto;
      }

      form.search {
        background-color: #DDD;
        margin-top: 10px;
        margin-bottom: 10px;
        padding: 10px;
      }

      span.language {
        display: block;
        margin-top: 1em;
        font: 18px Verdana, Helvetica, Arial, sans-serif;
        font-weight: bold;
      }

      table.available_translations {
        font: 12px Verdana, Helvetica, Arial, sans-serif;
        background: #f2f6fc;
        border: 1px solid #b9bbbd;
        color: #333;
        width: 100%;
      }

      table.available_translations td {
        padding: 0.7em;
        border-bottom: 1px solid #b9bbbd;
      }

      table.available_translations tr:hover {
        color: #000;
        background-color: #adb2b8;
      }

  %body
    %p
      = link_to 'Main page',  globalize_translations_path
      |
      = link_to 'Translations list', list_globalize_translations_path

    %p.request_host
      Request host:
      %span= @globalize_app.request_host

    = yield
